<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grad_start"
    android:padding="30dp"
    tools:context=".common.Activity_registrtn_and_login_panel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/softwarelogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Your Selection Makes Your Life Easy"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/delius_swash_caps"
            android:gravity="center"
            android:text="The best Software Company . We Encourage You Grow With Us."
            android:textAlignment="center" />

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/login"
                android:onClick="login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@drawable/et_bg"
                android:layout_marginRight="10dp"
                android:transitionName="transition_login"/>


            <Button
                android:id="@+id/registr"
                android:layout_width="0dp"
                android:onClick="register"
                android:layout_height="wrap_content"
                android:text="Resister"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:background="@drawable/et_bg"
                android:layout_marginLeft="10dp"
                android:transitionName="transition_register"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How We Work?"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</ScrollView>